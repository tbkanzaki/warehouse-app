<h1>Fornecedor <%= @supplier.brand_name %></h1>
<dl>
  <dt>Nome: </dt>
  <dd><%= @supplier.corporate_name %></dd>
  <dt>Registro: </dt>
  <dd><%= @supplier.registration_number %></dd>
  <dt>Endereço: </dt>
  <dd><%= @supplier.full_address %> - <%= @supplier.city %> - <%= @supplier.state %></dd>
  <dt>E-mail: </dt>
  <dd><%= @supplier.email %></dd>
</dl>
<div>
  <%= link_to 'Editar', edit_supplier_path(@supplier) %>
</div>
<div>
  <%= link_to 'Voltar', root_path %>
</div>
<p>
  <h4>Produtos do Fornecedor <%= @supplier.brand_name %></h4>
</p>
<% if @product_models.any? %>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>SKU</th>
      </tr>
    </thead>
    <tbody>
      <% @product_models.each do |product_model| %>
        <tr>
          <td><%= product_model.name %></td>
          <td><%= product_model.sku %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Não existem modelos de produtos cadastrados</p>
<% end %>
